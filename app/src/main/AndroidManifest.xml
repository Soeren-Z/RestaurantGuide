<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <!-- Allow querying for apps that handle geo: URIs -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
        <!-- Allow querying for Google Maps specifically -->
        <package android:name="com.google.android.apps.maps" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantGuide">

        <activity
            android:name=".ui.activities.MapsActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.RestaurantDetailsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".ui.activities.AddEditRestaurantActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity" />
        <activity
            android:name=".ui.activities.RestaurantDetailsActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity" />
        <activity
            android:name=".ui.activities.StartUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.TeamInfoActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.StartUpActivity" />
        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RestaurantGuide.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>